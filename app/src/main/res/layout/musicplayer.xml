<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        >

        <TextView
            android:id="@+id/txtFieldSongName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:contentDescription="Music Note"
        app:srcCompat="@drawable/ic_baseline_music_note_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/player_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/bt_rew"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Fast Rewind"
            app:srcCompat="@drawable/ic_baseline_fast_rewind_24" />

        <ImageView
            android:id="@+id/bt_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Play"
            app:srcCompat="@drawable/ic_baseline_play_circle_filled_24" />

        <ImageView
            android:id="@+id/bt_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Pause"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_pause_circle_filled_24" />

        <ImageView
            android:id="@+id/bt_ff"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:contentDescription="Fast Forward"
            app:srcCompat="@drawable/ic_baseline_fast_forward_24" />
        />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnAddPlaylist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="AddPlaylist"
            app:srcCompat="@drawable/ic_baseline_playlist_add_check_24" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >

        <ProgressBar
            android:id="@+id/loaderMusic"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="112dp"
            android:layout_height="72dp"
            android:rotationX="-7" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Songs" />


    </LinearLayout>




</LinearLayout>

